@model List<Project>
@{
    //razor block
    ViewData["Title"] = "Projects";
}

@if (Model.Any())
{
    <table class="table">

        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>

        @foreach (var project in Model)
        {
            <tbody>

                <tr>
                    <td>@project.ProjectId</td>
                    <td>@project.Name</td>
                    <td>@project.Description</td>
                </tr>

            </tbody>
        }
    </table>
}
else
{
    <p>No Projects Available</p>
}
